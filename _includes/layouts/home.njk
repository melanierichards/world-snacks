---
layout: layouts/global.njk
pagination:
  data: snacks
  size: 10
  alias: snacks
  reverse: true
---

<p class="tagline">Eat snacks. Almost too much. Mostly candy.</p>

{{ content | safe }}

<h2>Recent Snacks</h2>

<ul>
  {% for snack in snacks %}
    {% set context = 'home' %}
    {% include 'snack-info.njk' %}
  {% endfor %}
</ul>

{% if pagination.href.next or pagination.href.previous %}
  <nav class="c-pagination" aria-labelledby="pagination-heading">
    <h2 class="u-vis-hidden" id="pagination-heading">Navigate to more posts</h2>
    {% if pagination.href.next %}
      <a class="c-pagination__older" href="{{ pagination.href.next | url }}">
        <span>Older posts</span>
      </a>
    {% endif %}
    {% if pagination.href.previous %}
      <a class="c-pagination__newer" href="{{ pagination.href.previous | url }}">
        <span>Newer posts</span>
      </a>
    {% endif %}
  </nav>
{% endif %}

<h2>Browse by country</h2>
<ul>
  {% for country in countries %}
    <li>
      <a href="/country/{{ country.countryName | slug }}/">{{ country.countryName }}</a>
    </li>
  {% endfor %}
</ul>

<h2>5-star snacks</h2>
{% set fiveStarSnacks = snacks | fiveStarSnacks | reverse %}
{% set context = '5-star' %}
<ul>
  {% for snack in fiveStarSnacks %}
    {% include 'snack-simple-listing.njk' %}
  {% endfor %}
</ul>