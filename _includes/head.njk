<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% if title %}{{ title | escape }} - {% endif %}{{ site.title }}</title>
  {% if description %}
    <meta name="description" content="{{ description }}">
  {% else %}
    <meta name="description" content="{{ site.description }}">
  {% endif %}
  <meta name="robots" content="index, follow">

  <!-- SOCIAL MEDIA -->
  <meta property="og:site_name" content="{{ site.title }}">
  <meta property="og:locale" content="en_US">
  <meta property="og:type" content="website">
  <meta name="twitter:site" content="">

  <meta property="og:url" content="{{ site.url }}{{ url }}">
  <meta name="twitter:url" content="{{ site.url }}{{ url }}">
  
  {% if title %}
    <meta property="og:title" content="{{ title }}">
    <meta name="twitter:title" content="{{ title }}">
  {% else %}
    <meta property="og:title" content="{{ site.title }}">
    <meta name="twitter:title" content="{{ site.title }}">
  {% endif %}

  {% if snack.image.fields.file.url and snack.image.fields.description %}
    <meta property="og:image" content="{{ snack.image.fields.file.url }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image:src" content="{{ snack.image.fields.description }}">
    {% if featureAlt %}
      <meta name="twitter:image:alt" content="{{ featureAlt }}">
    {% endif %}
    <meta property="og:description" content="A snack review">
    <meta property="twitter:description" content="A snack review">
  {% else %}
    <meta name="og:image" content="{{ site.url }}/assets/images/social-twitter.png">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image:src" content="{{ site.url }}/assets/images/social-twitter.png">
    <meta name="twitter:image:alt" content="Logo: 'world snacks' written in puffy pink letters inside an illustration stylized like American Smarties candies">
    <meta property="og:description" content="{{ site.description }}">
    <meta property="twitter:description" content="{{ site.description }}">
  {% endif %}

  <link rel="canonical" href="{{ site.url }}{{ url }}">

  <!-- ICONS -->
  <link rel="icon" href="/assets/images/favicon.png" type="image/png">
  <link rel="icon" href="/assets/images/favicon.svg" type="image/svg+xml">
  <link rel="apple-touch-icon" href="/assets/images/icon-180.png"> <!-- Apple Touch Icon -->
  <link rel="manifest" href="/manifest.webmanifest">

  <!-- BROWSER UI -->
  <meta name="theme-color" content="#621d4b" media="(prefers-color-scheme: dark)">
  <meta name="theme-color" content="#ffefd5">

  <!-- STYLE -->
  <link rel="stylesheet" href="/assets/css/style.css">

  <!-- THIS GOES IN THE HEAD TO AVOID THEME FLASHES -->
  <script src="/assets/js/scripts.js"></script>
</head>